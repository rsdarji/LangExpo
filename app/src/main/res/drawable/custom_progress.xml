<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define the background properties progress like color etc -->
    <item android:id="@android:id/background">
        <shape>
            <gradient android:startColor="#cdcdcd"
                android:centerColor="#cdcdcd"
                android:centerY="1.0"
                android:endColor="#cdcdcd"
                android:angle="270" />
            <corners
                android:radius="100dp" />
        </shape>
    </item>

    <!-- Define the progress properties like start color, end color etc -->
    <item android:id="@android:id/progress"
        android:top="4dp"
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp">
        <scale android:scaleWidth="100%">
            <shape>
                <gradient android:gradientRadius="100dp"
                    android:startColor="#460d1e"
                    android:centerColor="#460d1e"
                    android:centerY="1.0"
                    android:endColor="#460d1e"/>
                <corners
                    android:radius="100dp" />
            </shape>
        </scale>
    </item>
</layer-list>