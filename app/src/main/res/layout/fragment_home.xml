<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!--<Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fragment_home" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_view_add_question"
                android:layout_width="165dp"
                android:layout_height="150dp"
                android:textAlignment="textEnd"
                android:onClick="addQuestion"
                android:outlineSpotShadowColor="@color/colorAccent" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:text="Add Question"
                    android:background="@color/colorPrimaryLight"
                    />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="165dp"
                android:layout_height="150dp"
                android:textAlignment="textEnd"
                android:onClick="addQuestionType"
                android:layout_marginLeft="25dp"
                android:outlineSpotShadowColor="@color/colorAccent" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:text="Add Question Type"
                    android:background="@color/colorPrimaryLight"
                    />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="165dp"
                android:layout_height="150dp"
                android:textAlignment="textEnd"
                android:onClick="addLanguage"
                android:outlineSpotShadowColor="@color/colorAccent" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:text="Add Language"
                    android:background="@color/colorPrimaryLight"
                    />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="165dp"
                android:layout_height="150dp"
                android:textAlignment="textEnd"
                android:onClick="addLecture"
                android:layout_marginLeft="25dp"
                android:outlineSpotShadowColor="@color/colorAccent" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:text="Add Lecture"
                    android:background="@color/colorPrimaryLight"
                    />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="165dp"
                android:layout_height="150dp"
                android:textAlignment="textEnd"
                android:onClick="addLanguage"
                android:outlineSpotShadowColor="@color/colorAccent" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:text="Add Language"
                    android:background="@color/colorPrimaryLight"
                    />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="165dp"
                android:layout_height="150dp"
                android:textAlignment="textEnd"
                android:onClick="addGoal"
                android:layout_marginLeft="25dp"
                android:outlineSpotShadowColor="@color/colorAccent" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:text="Add Goal"
                    android:background="@color/colorPrimaryLight"
                    />
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <com.google.android.material.card.MaterialCardView
                android:layout_width="165dp"
                android:layout_height="150dp"
                android:textAlignment="textEnd"
                android:onClick="addLevel"
                android:outlineSpotShadowColor="@color/colorAccent" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:text="Add Level"
                    android:background="@color/colorPrimaryLight"
                    />
            </com.google.android.material.card.MaterialCardView>

            <!--<com.google.android.material.card.MaterialCardView
                android:layout_width="165dp"
                android:layout_height="150dp"
                android:textAlignment="textEnd"
                android:onClick="addQuestionType"
                android:layout_marginLeft="25dp"
                android:outlineSpotShadowColor="@color/colorAccent" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:text="Add Question Type"
                    android:background="@color/colorPrimaryLight"
                    />
            </com.google.android.material.card.MaterialCardView>-->
        </LinearLayout>
    </LinearLayout>
</ScrollView>