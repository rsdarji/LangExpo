<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="8dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardElevation="15dp"
        app:cardPreventCornerOverlap="false"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:padding="8dp">

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/user_progress__row_layout_user_lecture3f_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily=""
                android:text="Lecture Name"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"/>

            <!--<com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/lecture_row_layout_user_level_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily=""
                android:text="Level: "
                android:layout_marginTop="3dp"
                android:layout_below="@+id/lecture_row_layout_user_lecture3f_name"
                android:textColor="@color/colorPrimary"/>

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/lecture_row_layout_user_level_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily=""
                android:text=""
                android:layout_marginTop="3dp"
                android:layout_below="@+id/lecture_row_layout_user_lecture3f_name"
                android:layout_toRightOf="@+id/lecture_row_layout_admin_level_name_tv"
                android:textColor="@color/colorPrimary"/>

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/lecture_row_layout_user_sequence_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily=""
                android:text="Seq. : "
                android:layout_marginTop="3dp"
                android:layout_below="@+id/lecture_row_layout_user_level_name_tv"
                android:textColor="@color/colorPrimary"/>
            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/lecture_row_layout_user_sequence_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily=""
                android:text=""
                android:layout_marginTop="3dp"
                android:textColor="@color/colorPrimary"/>-->

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/user_progress__row_layout_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily=""
                android:text="Language"
                android:layout_alignParentRight="true"
                android:textColor="@color/colorPrimary"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>